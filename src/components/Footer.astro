<style>
    .footer {
        position: relative;
        background: linear-gradient(to bottom, var(--color-dark), var(--color-black));
        padding: 3rem 0 1rem;
    }

    .footer::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, 
            transparent 0%, 
            var(--color-primary) 20%, 
            var(--color-primary) 80%, 
            transparent 100%
        );
        box-shadow: 
            0 0 10px var(--color-primary),
            0 0 20px var(--color-primary),
            0 0 30px var(--color-primary);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .footer__content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .footer__logo {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .footer__logo img {
        border-radius: 50%;
        object-fit: cover;
    }

    .footer__logo h3 {
        font-size: 1.5rem;
        color: var(--color-primary);
        margin: 0;
        font-weight: 600;
    }

    .footer__logo p {
        margin: 0;
        opacity: 0.8;
        font-size: 0.9rem;
    }

    .footer__section h4 {
        color: var(--color-primary);
        font-size: 1.2rem;
        margin-bottom: 1rem;
        text-transform: uppercase;
        font-weight: 600;
    }

    .footer__links {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .footer__links a {
        color: var(--color-white);
        opacity: 0.8;
        transition: all 0.3s ease;
    }

    .footer__links a:hover {
        color: var(--color-primary);
        opacity: 1;
    }

    .footer__schedule p,
    .footer__contact p {
        margin-bottom: 0.5rem;
        opacity: 0.8;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .footer__contact p .material-icons {
        color: var(--color-primary);
        font-size: 1.1rem;
    }

    .footer__social {
        display: flex;
        gap: 1rem;
    }

    .social-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 45px;
        height: 45px;
        background: radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%,#d6249f 60%,#285AEB 90%);
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .social-icon .fab {
        color: white;
        font-size: 2rem;
    }

    .social-icon:hover {
        transform: translateY(-2px) rotate(5deg);
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);
    }

    .footer__divider {
        height: 1px;
        background: linear-gradient(
            to right,
            transparent,
            var(--color-gray),
            transparent
        );
        margin: 2rem 0 1rem;
        opacity: 0.3;
    }

    .footer__bottom {
        text-align: center;
    }

    .footer__copyright p {
        margin: 0.25rem 0;
        opacity: 0.7;
        font-size: 0.9rem;
    }

    @media screen and (max-width: 768px) {
        .footer__content {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .footer__logo {
            justify-content: center;
        }

        .footer__social {
            justify-content: center;
        }
    }
</style>
