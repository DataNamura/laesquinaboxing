<header class="header">
    <nav class="nav container">
        <a href="/" class="nav__logo">
            <img src="/logo.jpg" alt="La Esquina Boxing Logo" width="50" height="50">
            <span>La Esquina</span>
        </a>

        <div class="nav__menu" id="nav-menu">
            <ul class="nav__list">
                <li class="nav__item">
                    <a href="#" class="nav__link">Inicio</a>
                </li>
                <li class="nav__item">
                    <a href="#box-general" class="nav__link">Boxeo</a>
                </li>
                <li class="nav__item">
                    <a href="#box-kids" class="nav__link">Boxeo Kids</a>
                </li>
                <li class="nav__item">
                    <a href="#box-women" class="nav__link">Boxeo Mujeres</a>
                </li>
                <li class="nav__item">
                    <a href="#horarios" class="nav__link">Horarios</a>
                </li>
                <li class="nav__item">
                    <a href="#entrenadores" class="nav__link">Entrenadores</a>
                </li>
                <li class="nav__item">
                    <a href="#contacto" class="nav__link">Ubicación</a>
                </li>
            </ul>
        </div>

        <button class="nav__toggle" id="nav-toggle" aria-label="Menú">
            <span class="nav__toggle-line"></span>
            <span class="nav__toggle-line"></span>
            <span class="nav__toggle-line"></span>
        </button>
    </nav>
</header>

<style>
    .header {
        position: fixed;
        width: 100%;
        top: 0;
        left: 0;
        z-index: 100;
        background-color: rgba(0, 0, 0, 0.9);
        transition: 0.4s;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .nav {
        height: 5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav__logo {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-primary);
    }

    .nav__logo img {
        border-radius: 50%;
        object-fit: cover;
    }

    .nav__list {
        display: flex;
        gap: 1.5rem;
        list-style: none;
        flex-wrap: wrap;
        justify-content: center;
    }

    .nav__link {
        font-size: 1rem;
        font-weight: 500;
        transition: color 0.3s;
        padding: 0.5rem 0.75rem;
        border-radius: 4px;
    }

    .nav__link:hover {
        color: var(--color-primary);
    }

    .nav__toggle {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
    }

    .nav__toggle-line {
        display: block;
        width: 25px;
        height: 2px;
        background-color: var(--color-white);
        margin: 5px 0;
        transition: 0.3s;
    }

    @media screen and (max-width: 768px) {
        .nav__menu {
            position: fixed;
            top: 5rem;
            right: -100%;
            width: 80%;
            height: 100vh;
            background-color: var(--color-black);
            transition: 0.4s;
            padding: 2rem;
        }

        .nav__menu.show-menu {
            right: 0;
        }

        .nav__list {
            flex-direction: column;
            align-items: center;
            row-gap: 2.5rem;
        }

        .nav__toggle {
            display: block;
        }
    }
</style>

<script>
    const navMenu = document.getElementById('nav-menu');
    const navToggle = document.getElementById('nav-toggle');

    navToggle?.addEventListener('click', () => {
        navMenu?.classList.toggle('show-menu');
    });

    // Cerrar menú al hacer click en un enlace
    const navLinks = document.querySelectorAll('.nav__link');
    navLinks.forEach(link => {
        link.addEventListener('click', () => {
            navMenu?.classList.remove('show-menu');
        });
    });
</script>
