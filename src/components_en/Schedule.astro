<style>
    .schedule {
        padding: 6rem 0;
        background-color: var(--color-dark);
    }

    .schedule__title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 3rem;
    }

    .text-primary {
        color: var(--color-primary);
    }


    .schedule__table-wrapper {
        overflow-x: auto;
        background: var(--color-black);
        border-radius: 8px;
        padding: 1rem;
    }

    .schedule__table {
        width: 100%;
        border-collapse: collapse;
        min-width: auto;
        font-size: 0.9rem;
    }

    .schedule__table th,
    .schedule__table td {
        padding: 0.75rem 0.5rem;
        text-align: center;
        border: 1px solid var(--color-gray);
    }

    .schedule__table th {
        background-color: var(--color-primary);
        color: var(--color-white);
        font-weight: 600;
        font-size: 0.85rem;
    }

    .schedule__table tr:nth-child(even) {
        background-color: rgba(255, 255, 255, 0.05);
    }

    .kids-row,
    .kids-row td {
        color: var(--color-primary);
        font-weight: 700;
    }

    @media screen and (max-width: 768px) {
        .schedule__table {
            font-size: 0.75rem;
        }

        .schedule__table th,
        .schedule__table td {
            padding: 0.5rem 0.25rem;
        }

        .schedule__table th {
            font-size: 0.75rem;
            white-space: nowrap;
        }

        .schedule__table td {
            white-space: nowrap;
        }

        .schedule__table-wrapper {
            margin: 0 -1rem;
            padding: 0 1rem;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
            scrollbar-width: thin;
            scrollbar-color: var(--color-primary) var(--color-dark);
        }

        .schedule__table-wrapper::-webkit-scrollbar {
            height: 6px;
        }

        .schedule__table-wrapper::-webkit-scrollbar-track {
            background: var(--color-dark);
        }

        .schedule__table-wrapper::-webkit-scrollbar-thumb {
            background-color: var(--color-primary);
            border-radius: 6px;
        }
    }


    @media screen and (max-width: 768px) {
        .schedule {
            padding: 4rem 0;
        }

        .schedule__title {
            font-size: 2rem;
        }
    }
</style>
