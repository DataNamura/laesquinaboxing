<section class="location" id="contacto">
    <div class="container">
        <h2 class="location__title">WHERE TO <span class="text-primary">FIND US</span></h2>
        
        <div class="location__grid">
            <div class="location__info">
                <div class="info-card">
                    <h3><span class="material-icons">location_on</span> Location</h3>
                    <p>C. Grama, 2, local 2<br>
                    38627 La Camella<br>
                    Santa Cruz de Tenerife</p>
                </div>

                <div class="info-card">
                    <h3><span class="material-icons">schedule</span> Schedule</h3>
                    <div class="schedule-summary">
                        <p><strong>Monday to Friday:</strong><br>
                        09:00 - 13:30<br>
                        16:00 - 21:30</p>
                        <p><strong>Saturday and Sunday:</strong><br>
                        Closed</p>
                    </div>
                </div>

            </div>

            <div class="location__map">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d450586.8307809231!2d-17.292275110937524!3d28.079148299999993!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xc6a995bbf2a0d43%3A0xf281a08355b18da5!2sLA%20ESQUINA%20BOXING!5e0!3m2!1ses!2ses!4v1757615916215!5m2!1ses!2ses"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </div>
</section>

<style>
    .location {
        padding: 6rem 0;
        background-color: var(--color-dark);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .location__title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 3rem;
        text-transform: uppercase;
    }

    .text-primary {
        color: var(--color-primary);
    }

    .location__grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        align-items: start;
    }

    .location__info {
        display: grid;
        gap: 1.5rem;
    }

    .info-card {
        background-color: var(--color-dark);
        padding: 1.5rem;
        border-radius: 8px;
    }

    .info-card h3 {
        font-size: 1.3rem;
        margin-bottom: 1rem;
        color: var(--color-primary);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .info-card p {
        margin-bottom: 0.5rem;
        line-height: 1.6;
    }

    .schedule-summary p {
        margin-bottom: 1rem;
    }


    .location__map {
        border-radius: 8px;
        overflow: hidden;
        height: 500px;
        background-color: var(--color-dark);
    }

    @media screen and (max-width: 768px) {
        .location {
            padding: 4rem 0;
        }

        .location__title {
            font-size: 2rem;
        }

        .location__grid {
            grid-template-columns: 1fr;
        }

        .location__map {
            height: 300px;
        }
    }
</style>
